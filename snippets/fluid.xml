<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="fluid"
          fetch="https://github.com/Project-Fluid"
          revision="fluid-10" />

  <!-- General repos -->
  <project path="manifest" name="manifest" remote="fluid" />
  <project path="build/make" name="build" remote="fluid">
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="build_soong" remote="fluid" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>
  <!-- Device -->
  <project path="device/custom/sepolicy" name="device_custom_sepolicy" remote="fluid" />

  <!-- Frameworks -->
  <project path="frameworks/base" name="frameworks_base" remote="fluid" />

  <!-- Packages -->
  <project path="packages/apps/Settings" name="packages_apps_Settings" remote="fluid" />
  <project path="packages/apps/SettingsIntelligence" name="packages_apps_SettingsIntelligence" remote="fluid" />
  <project path="packages/apps/FluidCustomization" name="packages_apps_FluidCustomisation" remote="fluid" />
  <project path="packages/apps/ThemePicker" name="packages_apps_ThemePicker" remote="fluid" />

  <!-- System repos -->
  <project path="system/sepolicy" name="system_sepolicy" remote="fluid" />

  <!-- External repos -->
  <project path="external/asus/stitchimage" name="external_asus_stitchimage" remote="fluid" />

  <!-- Vendor -->
  <project path="vendor/aosp" name="vendor_fluid" remote="fluid" />
  <project path="vendor/pixelstyle" name="vendor_pixelstyle" remote="fluid" />

</manifest>
